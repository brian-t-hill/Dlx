<UserControl x:Class="Pentomino.Views.DlxMetricsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pentomino"
             mc:Ignorable="d" 
             >

    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" >
        <StackPanel Orientation="Horizontal">
            <TextBlock
                Text="{Binding DurationLabel}"
                FontSize="18"
                />
            <TextBlock
                Margin="10,0,0,0"
                Text="{Binding SolverElapsedDurationString}"
                FontSize="18"
                />
        </StackPanel>

        <TextBlock
            Margin="0,10,0,0"
            Text="{Binding SolutionCount}"
            FontSize="18"
            />

        <TextBlock
            Margin="0,10,0,0"
            Text="{Binding RecursivePassesCount}"
            FontSize="18"
            />

        <TextBlock
            Margin="0,10,0,0"
            Text="{Binding RowsRemovedCount}"
            FontSize="18"
            />

    </StackPanel>

</UserControl>
